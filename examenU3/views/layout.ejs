    <link rel="stylesheet" href="/css/styles.css">
</head>
<script>
    function clock() {
        var hoy = new Date();
        var h = hoy.getHours();
        var m = hoy.getMinutes();
        var s = hoy.getSeconds();
        if (m < 10) { m = "0" + m; }
        if (s < 10) { s = "0" + s; }
        document.getElementById('clock').innerHTML =
            h + " : " + m + " : " + s;
        var t = setTimeout(clock, 1000);
    }
    function fecha() {
        var hoy = new Date();
        var a = hoy.getFullYear();
        var m = hoy.getMonth() + 1;
        var d = hoy.getDate();
        var h = hoy.getHours();
        var min = hoy.getMinutes();
        var s = hoy.getSeconds();
        if (m < 10) { m = "0" + m; }
        if (d < 10) { d = "0" + d; }
        if (min < 10) { min = "0" + min; }
        if (s < 10) { s = "0" + s; }
        document.getElementById('fecha').innerHTML =
            d + '/' + m + '/' + a + '-' + h + ":" + min + ":" + s;
        var t = setTimeout(clock, 1000);
    }
</script>

<body onload="clock(), fecha()">
